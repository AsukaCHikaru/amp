{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.publish.tsbuildinfo.json",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "lib"],
  "exclude": ["node_modules", "**/*.test.ts", "test"]
}
